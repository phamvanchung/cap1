<div class="column">
    {{#each posts}}
    <div class="card mt-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{this.image}} " alt="{{this.name}}" class="mt-4 ml-4">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-title">{{this.address}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>